{
  "name": "wavedrom",
  "version": "2.3.2",
  "description": "Digital timing diagram in your browser",
  "homepage": "http://wavedrom.com",
  "author": "alex.drom@gmail.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wavedrom/wavedrom.git"
  },
  "bugs": {
    "url": "https://github.com/wavedrom/wavedrom/issues"
  },
  "bin": {
    "wavedrom": "./bin/cli.js"
  },
  "main": "./lib",
  "unpkg": "wavedrom.unpkg.min.js",
  "files": [
    "bin/cli.js",
    "wavedrom.js",
    "wavedrom.min.js",
    "wavedrom.unpkg.js",
    "LICENSE",
    "lib/**",
    "skins/**"
  ],
  "scripts": {
    "test": "npm-run-all eslint",
    "eslint": "eslint lib/*.js",
    "dist": "browserify ./lib/wave-drom.js > wavedrom.js",
    "dist.min": "{ node ./bin/header.js ; terser --compress --mengle -- wavedrom.js; } > wavedrom.min.js",
    "unpkg": "browserify --standalone wavedrom lib/index.js > wavedrom.unpkg.js",
    "unpkg.min": "terser --compress --mengle -- wavedrom.unpkg.js > wavedrom.unpkg.min.js",
    "cli": "{ echo '#!/usr/bin/env node' ; browserify --node bin/cli.js ; } > bin/wavedrom.js ; chmod +x bin/wavedrom.js",
    "prepare": "npm-run-all test  dist dist.min unpkg unpkg.min",
    "coverage": "nyc report -r=text-lcov | coveralls"
  },
  "keywords": [
    "waveform",
    "verilog",
    "RTL"
  ],
  "devDependencies": {
    "@drom/eslint-config": "^0.10.0",
    "browserify": "^16.5.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.11",
    "eslint": "^6.8.0",
    "jsof": "^0.3.2",
    "mocha": "^7.1.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.1",
    "terser": "^4.6.11"
  },
  "dependencies": {
    "bit-field": "^1.3.1",
    "fs-extra": "^8.1.0",
    "json5": "^2.1.1",
    "onml": "^1.2.0",
    "tspan": "^0.3.6",
    "yargs": "^15.3.1"
  },
  "eslintConfig": {
    "extends": "@drom/eslint-config/eslint4/node4",
    "rules": {
      "camelcase": 0
    }
  }
}
